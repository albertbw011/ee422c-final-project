               </padding>
               <font>
                  <Font name="Segoe UI" size="15.0" />
               </font>
            </Button>
            <Button fx:id="bidButton2" mnemonicParsing="false" style="-fx-background-color: #3388ff; -fx-background-radius: 20; -fx-border-radius: 20; -fx-font-weight: BOLD;" text="Bid $2" textFill="WHITE">
               <padding>
                  <Insets bottom="10.0" left="50.0" right="50.0" top="10.0" />
               </padding>
               <HBox.margin>
                  <Insets left="20.0" right="20.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="bidButton3" mnemonicParsing="false" style="-fx-background-color: #3388ff; -fx-background-radius: 20; -fx-border-radius: 20; -fx-font-weight: BOLD;" text="Bid $3" textFill="WHITE">
               <HBox.margin>
                  <Insets left="20.0" right="20.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="10.0" left="50.0" right="50.0" top="10.0" />
               </padding>
            </Button>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <Label style="-fx-font-weight: SEMIBOLD;" text="Your max bid">
         <font>
            <Font size="19.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      <HBox fx:id="mainBidHBox" prefHeight="46.0" prefWidth="580.0">
         <children>
            <Label style="-fx-font-family: Segoe UI; -fx-font-weight: BOLD; -fx-font-size: 30;" text="\$">
               <font>
                  <Font size="21.0" />
               </font>
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="amountField">
               <HBox.margin>
                  <Insets right="20.0" top="3.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="20.0" right="200.0" />
               </padding>
            </TextField>
            <Button fx:id="mainBidButton" mnemonicParsing="false" style="-fx-background-color: #3388ff; -fx-border-radius: 20; -fx-background-radius: 20; -fx-font-weight: BOLD;" text="Bid" textFill="WHITE">
               <HBox.margin>
                  <Insets top="2.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="10.0" left="50.0" right="50.0" top="10.0" />
               </padding>
            </Button>
         </children>
      </HBox>
      <Label fx:id="enterOrMoreLabel" text="Enter bid or more.">
         <font>
            <Font size="12.0" />
         </font>
      </Label>
      <Label fx:id="errorLabel" text="Please input valid price" textFill="RED">
         <font>
            <Font size="12.0" />
         </font>
      </Label>
      <Label text="By selecting Bid, you are committing to buy this item if you are the winning bidder.">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Label>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
   </padding>
